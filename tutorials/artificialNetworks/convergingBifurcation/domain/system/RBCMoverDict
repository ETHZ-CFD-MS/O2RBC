FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      RBCMoverDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../../initialConditions"

normalizePathCoordinates   false;
useExternalEdgeIndices     true;

RBCVolume       $RBCVolume;

initialField    PO2;
initialValue    $PO2RBCInit;

inletValues
{
    type   constant;
    field  Hb;
    values
    (
        0  0.8
        1  0.6
        2  0.2
    );
}

sampleMeshNames
{
    type   constant;
    value  sampleRBC;
}

diameterFunction
{
    type        scalarFactor;
    factor      1.0;
    minDiameter 3e-6;
    maxDiameter 8e-6;
}

