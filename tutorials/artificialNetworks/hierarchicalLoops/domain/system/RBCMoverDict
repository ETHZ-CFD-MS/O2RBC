FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      RBCMoverDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../../initialConditions"

normalizePathCoordinates   false;
useExternalEdgeIndices     true;

RBCVolume       $RBCVolume;

initialField    Hb;
initialValue    $HbInit;

inletValues
{
    type        constant;
    field       Hb;
    uniformValue    $HbInlet;
}

sampleMeshNames
{
    type   constant;
    value  sampleRBC;
}

diameterFunction
{
    type        scalarFactor;
    factor      1.0;
    minDiameter 3e-6;
    maxDiameter 8e-6;
}

