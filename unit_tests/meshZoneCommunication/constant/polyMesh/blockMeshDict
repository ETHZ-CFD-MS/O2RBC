FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

x0   -10e-3;
x1    10e-3;
y0   -10e-3;
y1    10e-3;
z0   -2.5e-3;
z1    2.5e-3;

vertices
(
    ($x0 $y0 $z0)   // 0
    ($x1 $y0 $z0)   // 1
    ($x1 $y1 $z0)   // 2
    ($x0 $y1 $z0)   // 3
    ($x0 $y0 $z1)   // 4
    ($x1 $y0 $z1)   // 5
    ($x1 $y1 $z1)   // 6
    ($x0 $y1 $z1)   // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (4 4 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    domainBoundary
    {
        type patch;
        faces
        (
            (3 7 6 2)
            (0 4 7 3)
            (2 6 5 1)
            (1 5 4 0)
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

