FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    {
        name    lumen;
        type    cellSet;
        action  new;
        source  fieldToCell;
        sourceInfo
        {
            fieldName inLumen;
            min       0.001;
            max       1.0;
        }
    }
    {
        name    nonLumen;
        type    cellSet;
        action  new;
        source  cellToCell;
        sourceInfo
        {
            set       lumen;
        }
    }
    {
        name    nonLumen;
        type    cellSet;
        action  invert;
    }
);
