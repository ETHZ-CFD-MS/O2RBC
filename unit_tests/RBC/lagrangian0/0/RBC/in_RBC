FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      in_RBC;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    frontWedge
    {
        type            wedge;
    }
    backWedge
    {
        type            wedge;
    }
    RBC_to_non_RBC
    {
        type            calculated;
        value           uniform 1;
    }
}


